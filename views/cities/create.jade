doctype html
html
  head
    title Create City - City Finder
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    main
      header
        nav
          ul
            li: a(href="/") Home
            li: a(href="/cities") Cities
            li: a(href="/user_dashboard") Dashboard
            li: a(href="/logout") Logout
      section.login-container
        h1 Create City
        if error
          p.error-message(style="color:red")= error
        form(action="/cities/create", method="POST")
          .form-group
            label(for="name") City Name:
            input(type="text", name="name", placeholder="Enter city name", required)          
          .form-group
            label(for="country") Country:
            input(type="text", name="country", placeholder="Enter country", required)          
          .form-group
            label(for="population") Population:
            input(type="number", name="population", placeholder="Enter population", min="0")
          
          .form-group
            label(for="flag") Flag URL:
            input(type="text", name="flag", placeholder="Enter flag URL")
          
          .form-group
            label(for="unicode_flag") Unicode Flag:
            input(type="text", name="unicode_flag", placeholder="Enter unicode flag (e.g., ðŸ‡ºðŸ‡³)")
          
          .form-group
            label(for="dial_code") Dial Code:
            input(type="text", name="dial_code", placeholder="Enter dial code (e.g., +1)")
          
          .form-group
            label(for="lat") Latitude:
            input(type="number", name="lat", placeholder="Enter latitude", step="any")
          
          .form-group
            label(for="lng") Longitude:
            input(type="number", name="lng", placeholder="Enter longitude", step="any")
          
          .form-group
            button(type="submit") Create